{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://awmp.dev/schemas/grant.schema.json",
  "title": "AWMP Access Grant",
  "type": "object",
  "required": ["kind", "id", "jobId", "issuedAt", "expiresAt", "policy"],
  "properties": {
    "kind": {"const": "awmp.grant"},
    "id": {"type": "string"},
    "jobId": {"type": "string"},
    "issuedAt": {"type": "string", "format": "date-time"},
    "expiresAt": {"type": "string", "format": "date-time"},
    "policy": {
      "type": "object",
      "required": ["permissions"],
      "properties": {
        "permissions": {"type": "array", "items": {"type": "string"}},
        "network": {"type": "string", "description": "egress rules"},
        "revocation": {"type": "string"}
      },
      "additionalProperties": false
    },
    "credentialsEnvelope": {
      "type": "object",
      "description": "Encrypted/opaque reference to credentials; never plaintext in-band.",
      "properties": {
        "type": {"type": "string"},
        "ref": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
